<div class="row avatar" style="margin-bottom: 15px">
    {% if imageElement.vars.value %}
    <div class="col-xs-4 col-lg-3">
        <img src="{{ imageElement.vars.value.getWebPath() }}" class="image_preview" width="100%" />
    </div>
    <div class="col-xs-8 col-lg-9 form-group">
        {{ form_label(imageElement) }}
        {{ form_widget(imageElement.file) }}
        {{ form_errors(imageElement.file) }}
    </div>
    {% else %}
    <div class="form-group col-xs-12">
        {{ form_label(imageElement) }}
        {{ form_widget(imageElement.file) }}
        {{ form_errors(imageElement.file) }}
    </div>
    {% endif %}
</div>